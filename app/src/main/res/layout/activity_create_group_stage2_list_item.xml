<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:id="@+id/createGroupAccountStage2MainLL">

    <TextView
        android:id="@+id/createGroupAccountStage2ContactInitialsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/circular_name_initials_textview"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="DK" />

    <TextView
        android:id="@+id/createGroupAccountStage2ContactNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/cairo"
        tools:text="Dylan Kilbride"
        />

    </LinearLayout>