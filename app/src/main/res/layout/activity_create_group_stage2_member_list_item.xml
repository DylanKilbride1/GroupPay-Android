<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:id="@+id/createGroupAccountStage2MainLL">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/createGroupStage2ContactPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/cairo"
        android:src="@drawable/no_profile_photo" />

        <LinearLayout
            android:id="@+id/userDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/createGroupStage2ContactPhoto"
            android:layout_toStartOf="@id/gpIsolatedIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createGroupAccountStage2ContactNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="#232323"
                tools:text="Dylan Kilbride" />

            <TextView
                android:id="@+id/createGroupAccountStage2ContactNumberTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="+353871234567" />

        </LinearLayout>

    <ImageView
        android:id="@+id/gpIsolatedIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/gp_isolated" />


 </RelativeLayout>