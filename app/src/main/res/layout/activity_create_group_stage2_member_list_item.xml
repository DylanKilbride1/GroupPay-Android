<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:id="@+id/createGroupAccountStage2MainLL">

        <TextView
            android:id="@+id/createGroupAccountStage2ContactInitialsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circular_name_initials_textview"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="DK" />

        <LinearLayout
            android:id="@+id/userDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/createGroupAccountStage2ContactInitialsTV"
            android:layout_toStartOf="@id/gpIsolatedIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createGroupAccountStage2ContactNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:textColor="#232323"
                tools:text="Dylan Kilbride" />

            <TextView
                android:id="@+id/createGroupAccountStage2ContactNumberTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="+353871234567" />

        </LinearLayout>

    <ImageView
        android:id="@+id/gpIsolatedIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/gp_isolated" />


 </RelativeLayout>