<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registerLinearLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/verifyDetailsGroupPayImage"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/gp_isolated" />


    <LinearLayout
        android:id="@+id/registrationDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/invalidCredentialsRegistration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:fontFamily="@font/cairo"
            android:textSize="20sp"
            android:textColor="@color/incorrectField"
            android:text="@string/invalid_details"
            android:visibility="gone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/cairo"
            android:backgroundTint="@color/editTextBgTintStandard"
            android:hint="First Name"
            android:id="@+id/firstNameBox"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/cairo"
            android:backgroundTint="@color/editTextBgTintStandard"
            android:hint="Last Name"
            android:id="@+id/lastNameBox"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/cairo"
            android:backgroundTint="@color/editTextBgTintStandard"
            android:hint="Email"
            android:id="@+id/emailBox"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/cairo"
            android:backgroundTint="@color/editTextBgTintStandard"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/passwordBox"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/cairo"
            android:backgroundTint="@color/editTextBgTintStandard"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:id="@+id/confirmPasswordBox"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/registrationCountryCode"
                android:layout_width="100dp"
                android:layout_height="50dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/cairo"
                android:backgroundTint="@color/editTextBgTintStandard"
                android:hint="Mobile Number"
                android:inputType="number"
                android:id="@+id/mobileNumberBox"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/registerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:text="Register"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:background="@drawable/login_register_activity_button"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click here to login"
            android:fontFamily="@font/cairo"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/registerButton"
            android:gravity="center"
            android:id="@+id/loginLink"
            android:textColor="@color/editTextBgTintStandard"/>

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>